---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.vue";
import { getCollection } from "astro:content";

// Fetch all portfolio items
const allPortfolioItems = await getCollection("portfolio");
const sortedPortfolioItems = allPortfolioItems.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout title="Portfolio - My Work">
  <div class="py-16 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1
          class="text-4xl font-extrabold text-gray-900 dark:text-white sm:text-5xl"
        >
          My Portfolio
        </h1>
        <p class="mt-4 text-xl text-gray-500 dark:text-gray-400">
          A showcase of my projects and case studies
        </p>
      </div>

      <!-- Filter Buttons -->
      <div class="mt-12 flex flex-wrap justify-center gap-4">
        <button
          class="px-4 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors"
        >
          All
        </button>
        <button
          class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
        >
          Web Apps
        </button>
        <button
          class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
        >
          Mobile
        </button>
        <button
          class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
        >
          Open Source
        </button>
      </div>

      <!-- Projects Grid -->
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          sortedPortfolioItems.map((project) => (
            <ProjectCard
              client:load
              project={project}
              showCaseStudyLink={true}
            />
          ))
        }
      </div>
    </div>
  </div>
</Layout>
